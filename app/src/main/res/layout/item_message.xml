<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingTop="6dp"
    android:paddingEnd="12dp"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/tvMessageContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        tools:background="@drawable/bg_message_assistant_gemini"
        tools:text="Olá! Como posso ajudar você hoje?"
        tools:textColor="@color/text_primary" />

    <!-- Indicador de Digitando DIRETO (sem include) -->
    <LinearLayout
        android:id="@+id/typingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_message_assistant"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <View
            android:id="@+id/dot1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/typing_dot"
            android:alpha="0.4" />

        <View
            android:id="@+id/dot2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/typing_dot"
            android:alpha="0.4" />

        <View
            android:id="@+id/dot3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/typing_dot"
            android:alpha="0.4" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressTyping"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:indeterminateTint="@color/gemini_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tvMessageContent"
        app:layout_constraintStart_toEndOf="@id/tvMessageContent"
        app:layout_constraintTop_toTopOf="@id/tvMessageContent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessageContent"
        app:layout_constraintWidth_percent="0.90"
        app:strokeColor="@color/card_stroke"
        app:strokeWidth="1dp"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:background="#F8F9FA"
                android:contentDescription="Imagem do produto"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:textColor="?attr/colorOnSurface"
                android:textSize="17sp"
                tools:text="AMD Ryzen 5 5500 Processador" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/gemini_green"
                android:textSize="24sp"
                tools:text="R$ 599,99" />

            <TextView
                android:id="@+id/tvShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                tools:text="KaBuM!" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewOffer"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:text="Ver oferta"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:backgroundTint="@color/gemini_blue"
                app:cornerRadius="28dp"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
